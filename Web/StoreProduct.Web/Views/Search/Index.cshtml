@model List<Product>

<table class="table table-sm table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Номер</th>
            <th scope="col">Название</th>
            <th scope="col">Производитель</th>
            <th scope="col">Цена</th>
        </tr>
    </thead>
    <tbody>
        @for(int i=0; i<Model.Count; i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td><a href="@Url.Action("InfoProduct","Info",new { id = Model[i].Id })">@Model[i].Title</a></td>
                <td><a href="@Url.Action("InfoManufactures","Info", new { id = Model[i].Manufacture.Id })" >@Model[i].Manufacture.Title</a></td>
                <td>@Model[i].Price</td>
                <td>
                    <form action="@Url.Action("InfoProduct","Info")">
                        <input type="hidden" name="id" value="@Model[i].Id"/>
                        <button class="btn btn-success" type="submit">Подробнее о продукте</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    

</table>